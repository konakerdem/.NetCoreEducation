<!-- MovieApp.Web.Models.Movie yazmıyorum ViewImports sayesinde-->
@model Movie ; 
@{
    Layout = "_Layout2"; //ViewStarttaki layout değil bu çalışacak
}
<!--model olarak şunu kullanıyorum diyorum-->

       <h1>Film Listesi</h1>
       <div id="filmler">

           <div class=" film">

               <!-- ViewBag kullanımı      ViewBag.FilmBasligi-->
               <p> @Model.Title</p>
               <p> @Model.Description</p>
               <p> @Model.Director</p>

               <p> 
                   <ul>
                       @foreach (var player in Model.Players)
                    {
                        
                        <li>@player</li>
                    }
                   </ul>
               </p>
           </div>

       </div>

        