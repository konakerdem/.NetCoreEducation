@model List<Movie>     //ben model olarak bir Liste kullanacağım bu listenin tipi de ...... tam uzantısnı yazıyoruz.


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>movies/list</title>

   <style>
       .film{
           border:1px solid #000000;
           margin-bottom:10px;
           padding:10px
       }


   </style>




</head>
    <body>


    <h1>Film Listesi</h1>

    <div id="filmler">


        @foreach (var movie in Model) //modelim benim liste listemin her bir elemanı movie
        {
            <div class=" film">

                <p> @movie.Title</p>
                <p> @movie.Description</p>
                <p> @movie.Director</p>
                <!--oyuncular-->
                <p>
                    <ul>
                        @foreach (var player in movie.Players)
                        {

                            <li>@player</li>
                        }
                    </ul>
                </p>


            </div>

            
        }
       



    </div>







    </body>
</html>